generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TourType {
  Famille
  Couple
  Solo
  Aventure
  Culturel
  Luxe
  Budget
  Nature
  BienEtre
  Photographie
  Business
  Accessible
}

model Tour {
  id          String   @id @default(uuid())
  city        String
  country     String
  tourType    TourType
  title       String
  description String   @db.Text
  image       String?  @db.Text
  stops       Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([city, country, tourType])
}
